<style>
    body {
        background-color: #405d27;
    }

    .content-table {
        border-collapse: collapse;
        margin-top: auto;
        margin-bottom: auto;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        font-size: 0.9em;
        min-width: 400px;
        overflow: hidden;
        box-shadow: 0 0 20px rgb(0, 0, 0, 0.15);
        background-color: #fff5;
    }

        .content-table::-webkit-scrollbar {
            width: 8px 8px 0 0;
            height: 8px 8px 0 0;
        }

        .content-table thead tr {
            background-color: #3e4444;
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .content-table th,
        .content-table td {
            padding: 12px 15px;
        }

        .content-table tbody tr {
            border-bottom: 1px solid #dddddd;
            overflow: auto;
        }

            .content-table tbody tr:nth-child(even) {
                background-color: #f0f5f1;
            }

    button {
        background-color: #3e4444;
        color: white;
        padding: 5px 15px;
        border: none;
        cursor: pointer;
    }

    .backLinksContainer {
        display: inline;
    }

        .backLinksContainer button {
            font-family: product sans;
            font-size: 18px;
            color: silver;
            background: none;
            border: none;
            padding: 0;
            cursor: pointer;
            margin-right: 10px;
            transition: color 0.3s ease;
        }

            .backLinksContainer button:hover {
                color: grey;
            }

    h2, h3 {
        text-align: center;
        font-family: 'Product Sans', sans-serif;
        color: darkslategrey;
        text-shadow: 1px 1px 0.5px grey;
        font-weight: bold;
        transition: top 0.3s ease;
    }
</style>

<div class="backLinksContainer">
    <button type="button" onclick="location.href='@Url.Action("InsertAProductForm")'">Add Product</button>
</div>

<div class="formContainer">
    <h2>Products</h2> </br>
    <div />


<table class="content-table" >
    <tr>
        <td>ProductId</td>
        <td>ProductName</td>
        <td>SupplierId</td>
        <td>CategoryId</td>
        <td>QuntityPerUnit</td>
        <td>UnitPrice</td>
        <td>UnitsInStock</td>
        <td>UnitsOnOrder</td>
        <td>ReorderLevel</td>
        <td>Discontinued</td>
    </tr>

    @foreach (var p in ViewBag.ListOfProducts)
    {
        <tr>
            @*<td> <a href="UpdateAProductForm?aProductId=@p.ProductId">@p.ProductId</a> </td>
            <td> <a href="UpdateAProductForm?aProductId=@p.ProductId">@p.ProductName</a> </td>*@


            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.SupplierId</td>
            <td>@p.CategoryId</td>
            <td>@p.QuantityPerUnit</td>
            <td>@p.UnitPrice</td>
            <td>@p.UnitsInStock</td>
            <td>@p.UnitsOnOrder</td>
            <td>@p.ReorderLevel</td>
            <td>@p.Discontinued</td>
                <td> <a href="UpdateAProductForm?aProductId=@p.ProductId" class="btn btn-warning btn-sm">Edit</a> </td>
        </tr>
    }




</table>