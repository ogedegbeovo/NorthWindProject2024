<style>

    body {
        background-color: #405d27;
    }

    .form {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: none;
        padding: 28px;
        max-width: 650px;
        margin: 0 auto;
    }

    h2, h3 {
        text-align: center;
        font-family: 'Product Sans', sans-serif;
        color: darkslategrey;
        text-shadow: 1px 1px 0.5px grey;
        font-weight: bold;
        transition: top 0.3s ease;
    }

    .formGroup {
        position: relative;
        margin-bottom: 20px; /* Add margin-bottom to create space between form groups */
    }

        .formGroup select, .formGroup input[type="text"] {
            padding: 9px;
            border: none;
            transition: border-color 0.3s ease;
            width: 100%; /* Set width to 100% */
            background-color: #f0f5f1;
            color: black;
            border-bottom: 2px solid silver;
            font-size: 17px;
            z-index: 2;
        }

            .formGroup select:focus, .formGroup input[type="text"]:focus {
                border-color: #009879;
                outline: none;
            }

    .formButtons {
        text-align: center;
    }

    .formContainer {
        border: none;
        padding: 20px;
        box-sizing: border-box;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        max-width: 400px;
        margin: 50px auto 0;
        background-color: #f0f5f1;
    }

    label {
        font-weight: bold;
        font-family: 'Product Sans', sans-serif;
        color: grey;
        position: absolute;
        top: -20px;
        left: 5px;
        transition: top 0.3s ease;
    }


    label {
        transition: top 0.3s ease, left 0.3s ease;
    }


    .formGroup input:focus + label,
    .formGroup select:focus + label {
        top: -25px;
        left: 5px;
        font-size: 14px;
        color: #009879;
    }
</style>


<div class="formContainer">
<h2>Update an Order </h2>
@*<h3>Primary Key: @ViewBag.ListOfOrder[0].OrderId</h3>*@

<form action="UpdateAOrder" method="Post">

    <input type="hidden" name="aOrderId" value="@ViewBag.ListOfOrders[0].OrderId" />

    <div class="formGroup">
        <select name="aCustomerId" id="aCustomerId" class="formGroup" placeholder="Customer ID">

            @foreach (var c in ViewBag.ListOfCustomers)
            {
                @if (c.CustomerId == @ViewBag.ListOfOrders[0].CustomerId)
                {
                    <option value="@c.CustomerId" SELECTED>@c.CustomerId @c.CompanyName</option>

                }
                else
                {
                    <option value="@c.CustomerId">@c.CustomerId @c.CompanyName</option>

                }
            }
        </select>
        <label for="aCustomerId">Customer ID</label>
    </div>

    <div class="formGroup">
        <select name="aEmployeeId" id="aEmployeeId" class="formGroup" placeholder="Employee ID">

            @foreach (var e in ViewBag.ListOfEmployees)
            {
                @if (e.EmployeeId == @ViewBag.ListOfOrders[0].EmployeeId)
                {
                    <option value="@e.EmployeeId" SELECTED>@e.EmployeeId @e.FirstName @e.LastName</option>

                }
                else
                {
                    <option value="@e.EmployeeId">@e.EmployeeId @e.FirstName @e.LastName</option>

                }
            }
        </select>
        <label for="aEmployeeId">Employee ID</label>
    </div>
    

    <div class="formGroup">
        <input type="text" id="aOrderDate" class="formGroup" name="aOrderDate" placeholder="Order Date" value="@ViewBag.ListOfOrders[0].OrderDate" />
        <label for="aOrderDate">Order Date</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aRequiredDate" class="formGroup" name="aRequiredDate" placeholder="Required Date" value="@ViewBag.ListOfOrders[0].RequiredDate" />
        <label for="aRequiredDate">Required Date</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aShippedDate" class="formGroup" name="aShippedDate" placeholder="Shipped Date" value="@ViewBag.ListOfOrders[0].ShippedDate" />
        <label for="aShippedDate">Shipped Date</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aShipVia" class="formGroup" name="aShipVia" placeholder="Shipped Via" value="@ViewBag.ListOfOrders[0].ShipVia" />
        <label for="aShipVia">Shipped Via</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aFreight" class="formGroup" name="aShipVia" placeholder="Shipped Via" value="@ViewBag.ListOfOrders[0].Freight" />
        <label for="aFreight">Freight</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aShipName" class="formGroup" name="aShipName" placeholder="Ship Name" value="@ViewBag.ListOfOrders[0].ShipName" />
        <label for="aShipName">Ship Name</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aShipAddress" class="formGroup" name="aShipAddress" placeholder="Ship Address" value="@ViewBag.ListOfOrders[0].ShipAddress" />
        <label for="aShipAddress">Ship Address</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aShipCity" class="formGroup" name="aShipCity" placeholder="Ship City" value="@ViewBag.ListOfOrders[0].ShipCity" />
        <label for="aShipCity">Ship City</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aShipRegion" class="formGroup" name="aShipRegion" placeholder="Ship Region" value="@ViewBag.ListOfOrders[0].ShipRegion" />
        <label for="aShipRegion">Ship Region</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aShipPostalCode" class="formGroup" name="aShipPostalCode" placeholder="Ship Postal Code" value="@ViewBag.ListOfOrders[0].ShipPostalCode" />
        <label for="aShipPostalCode">Ship Postal Code</label>
    </div>

    <div class="formGroup">
        <input type="text" id="aShipCountry" class="formGroup" name="aShipCountry" placeholder="Ship Country" value="@ViewBag.ListOfOrders[0].ShipCountry" />
        <label for="aShipCountry">Ship Country</label>
    </div>

    <div class="formButtons">
        <input type="submit" />
        <input type="reset" />
    </div>

</form>
</div>